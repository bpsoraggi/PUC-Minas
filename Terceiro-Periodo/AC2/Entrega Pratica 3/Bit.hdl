/**
 * registrador de 1 bit:
 * if load[t] == 1 then out[t+1] = in[t]
 *                 else out não muda (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    // Coloque o seu código aqui:
    Mux(a=outDFF , b=in, sel=load, out=outMux);
    DFF(in=outMux, out=out, out=outDFF);
    
}
